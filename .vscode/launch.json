    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "runtimeVersion": "16.15.1",
            "request": "launch",
            "name": "Apollo App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server/index.ts",
            // "preLaunchTask": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "outFiles": [
                "${workspaceFolder}/server/dist/*.js"
            ]
        }
    ]
}